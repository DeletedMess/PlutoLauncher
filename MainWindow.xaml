        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlutoFN"
        mc:Ignorable="d"
        Title="Pluto" Height="450" Width="800">
    <Grid Background="#FF424141">
        <TextBox x:Name="EmailBR" HorizontalAlignment="Center" Margin="0,210,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" Background="Transparent" Foreground="White" FontSize="14"/>
