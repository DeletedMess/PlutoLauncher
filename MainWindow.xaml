        <Label Content="Email:" HorizontalAlignment="Left" Margin="197,206,0,0" VerticalAlignment="Top" Foreground="White" FontSize="14"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="172,250,0,0" VerticalAlignment="Top" Foreground="White" FontSize="14" />
        <Label Content="Pluto" HorizontalAlignment="Center" Margin="0,90,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Candara Light" FontSize="72"/>
        <Label Content="Pluto 1.1-Dev" HorizontalAlignment="Left" Margin="10,371,0,0" VerticalAlignment="Top" FontStyle="Italic" Foreground="#FF919191" FontSize="16"/>
        <Label Content="Register an Account at: https://lightnite.vortyxdev.repl.co/signup" HorizontalAlignment="Center" Margin="0,326,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" FontSize="14"/>
        <TextBox x:Name="PasswordBR" HorizontalAlignment="Center" Margin="0,254,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" Background="Transparent" Foreground="White" FontSize="14"/>

    </Grid>
</Window>
